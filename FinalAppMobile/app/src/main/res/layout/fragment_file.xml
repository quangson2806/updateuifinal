<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/username_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".MainActivity">



        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:columnCount="2"
            android:rowCount="10"
            tools:context="com.android_examples.com.gridlayout.MainActivity" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="87dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:text="File"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />


            <SearchView
                android:id="@+id/searchView"
                android:layout_width="380dp"
                android:layout_height="40dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_margin="10dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_edittext"
                android:iconifiedByDefault="false"
                android:queryHint="Search here"
                android:outlineAmbientShadowColor="@color/black"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/textminhngu"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginLeft="20dp"
                android:drawableLeft="@drawable/ic_baseline_drive_folder_upload_24"
                android:drawablePadding="8dp"
                android:text="folder upload"
                android:textColorHint="@color/black"
                android:textSize="14dp"
                android:padding="8dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:columnCount="2"
            android:rowCount="10"
            tools:context="com.android_examples.com.gridlayout.MainActivity" >

            <androidx.cardview.widget.CardView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/folder1"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="0dp"
                        android:drawableLeft="@drawable/ic_baseline_folder_24"
                        android:drawablePadding="8dp"
                        android:text="Folder name 1"
                        android:textSize="18dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:drawableRight="@drawable/ic_baseline_settings_24"/>

                    <TextView
                        android:id="@+id/folder2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="0dp"
                        android:drawableLeft="@drawable/ic_baseline_folder_24"
                        android:drawablePadding="8dp"
                        android:text="Folder name 2"
                        android:textColorHint="@color/black"
                        android:textSize="18dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:drawableRight="@drawable/ic_baseline_settings_24"/>

                    <TextView
                        android:id="@+id/folder3"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="0dp"
                        android:drawableLeft="@drawable/ic_baseline_folder_24"
                        android:drawablePadding="8dp"
                        android:text="Folder name 3"
                        android:textColorHint="@color/black"
                        android:textSize="18dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:drawableRight="@drawable/ic_baseline_settings_24"/>

                    <TextView
                        android:id="@+id/folder4"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="0dp"
                        android:drawableLeft="@drawable/ic_baseline_folder_24"
                        android:drawablePadding="8dp"
                        android:text="Folder name 4"
                        android:textColorHint="@color/black"
                        android:textSize="18dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:drawableRight="@drawable/ic_baseline_settings_24"/>

                    <TextView
                        android:id="@+id/folder5"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="0dp"
                        android:drawableLeft="@drawable/ic_baseline_folder_24"
                        android:drawablePadding="8dp"
                        android:text="Folder name 5"
                        android:textColorHint="@color/black"
                        android:textSize="18dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/cardview_dark_background"
                        android:drawableRight="@drawable/ic_baseline_settings_24"/>

                    <Button
                        android:id="@+id/btn_create_folder"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="270dp"
                        android:drawableLeft="@drawable/ic_baseline_create_new_folder_24"

                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </GridLayout>
    </LinearLayout>

</FrameLayout>